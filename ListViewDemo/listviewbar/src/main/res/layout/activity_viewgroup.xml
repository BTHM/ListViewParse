<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pawanjia.listviewbar.MainActivity">

    <ListView
        android:id="@+id/indicator_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <RelativeLayout
        android:id="@+id/indicator_rl"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        >

        <com.pawanjia.listviewbar.ListIndicator2
            android:id="@+id/indicator_list"
            android:layout_width="132dp"
            android:layout_height="match_parent"
            android:background="@mipmap/slide_bar"
            />

        <FrameLayout
            android:id="@+id/indicator_frame"
            android:layout_width="36dp"
            android:layout_height="42dp"
            android:layout_centerVertical="true">
        <ImageView
            android:id="@+id/indicator_iv"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_gravity="center"
            android:src="@mipmap/slide_back"/>
        </FrameLayout>
    </RelativeLayout>
</RelativeLayout>
